<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        @RenderSection("Styles", required: false)
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        @RenderSection("Styles", required: false)
    </environment>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header col-md-2">
                @Html.ActionLink("Series handler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand brand-name" })
            </div>
            <div class="col-md-10">
                <div class="row">
                    <div class="row">
                        <div>
                            <form class="navbar-form ">
                                <div class="input-group">
                                    <input type="text" class="form-control" style="max-width: 100%" placeholder="Search" name="srch-term" id="srch-term">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default pull-right" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                <li>@Html.ActionLink("Series", "Index", "Series")</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-default  pull-right">Sign in</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <environment names="Development">
            @RenderSection("Scripts", required: false)
        </environment>
        <environment names="Staging,Production">
            @RenderSection("Scripts", required: false)
        </environment>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
   
</body>
</html>
